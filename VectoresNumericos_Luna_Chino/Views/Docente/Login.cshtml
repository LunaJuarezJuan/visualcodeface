@{
    ViewBag.Title = "Login Docente";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login Docente</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f3f4f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-box {
            background-color: #fff;
            padding: 30px 40px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
            width: 350px;
        }

        h2 {
            text-align: center;
            color: #4a5568;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-top: 15px;
            color: #555;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            margin-top: 20px;
            border: none;
            background-color: #38b2ac;
            color: white;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            input[type="submit"]:hover {
                background-color: #319795;
            }

        .error {
            color: red;
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>Ingreso de Docente</h2>

        @using (Html.BeginForm())
        {
            <label for="usuario">Usuario</label>
            @Html.TextBox("usuario")

            <label for="contrasena">Contraseña</label>
            @Html.Password("contrasena")

            <input type="submit" value="Ingresar" />
        }

        @if (ViewBag.Error != null)
        {
            <div class="error">@ViewBag.Error</div>
        }
    </div>
</body>
</html>
