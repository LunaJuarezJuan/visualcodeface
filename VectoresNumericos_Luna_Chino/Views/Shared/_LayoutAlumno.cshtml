@* Views/Shared/_LayoutAlumno.cshtml *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Dashboard Alumno</title>
    <link href="~/Source/HomeStyles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Coloca aquí cualquier estilo extra si quieres */

        /* Corregimos  */
        @@media (max-width: 768px) {
            .sidebar {
                position: relative;
                width: 100%;
                height: auto;
                padding: 10px 0;
            }
            .main-content {
                margin-left: 0;
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <header>Mi Dashboard</header>
        <nav>
            <a href="@Url.Action("Index", "Alumno")" class="active"><i class="fas fa-home"></i> Inicio</a>
            <a href="@Url.Action("Perfil", "Alumno")"><i class="fas fa-user"></i> Perfil</a>
            <a href="@Url.Action("Asistencia", "Alumno")"><i class="fas fa-check-circle"></i> Asistencia</a>
            <a href="@Url.Action("Calificaciones", "Alumno")"><i class="fas fa-graduation-cap"></i> Calificaciones</a>
            <a href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a>
        </nav>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>
</body>
</html>
